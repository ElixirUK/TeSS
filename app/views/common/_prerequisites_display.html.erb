<% if resource.prerequisites and !resource.prerequisites.empty? %>
    <p><strong>Before attending this course, you should be able to:</strong></p>
    <ul>
      <%  resource.prerequisites.each do |prerequisite| %>
          <li>
            <% course_suggestions = prerequisite.matching_learning_outcomes %>
            <% if course_suggestions and course_suggestions.any? %>
                  <span class="show-suggested-resources">
                    <%= prerequisite.verb %> <%= prerequisite.noun%><%#_text%>
                    <% if prerequisite.tool_name and !prerequisite.tool_name.blank?%>
                        using <%= link_to prerequisite.tool_name, "https://bio.tools/#{prerequisite.tool_id}", target: "_blank" %>
                    <% end  %>
                    <em>(see <%= pluralize(course_suggestions.count, "suggestion")%> to learn how to
                      <%= prerequisite.verb %> <%= prerequisite.noun%><%#_text%>
                      <% if prerequisite.tool_name and !prerequisite.tool_name.blank? %>
                        using <%= link_to prerequisite.tool_name, "https://bio.tools/#{prerequisite.tool_id}", target: "_blank" %>
                    <% end  %>
                      )</em>
                  </span>
                <div class="hidden suggested-resources">
                  <em>These resources may help you master this pre-requisite</em>
                  <ul>
                    <% prerequisite.matching_learning_outcomes.each do |resource| %>
                        <li><%= link_to "#{resource.title} (#{resource.class})", resource, options: {target: "_blank"} %></li>
                    <% end %>
                  </ul>
                </div>
            <% else %>
                <%= prerequisite.verb %> <%= prerequisite.noun%><%#_text%>
                <% if prerequisite.tool_name and !prerequisite.tool_name.blank? %>
                  using <%= link_to prerequisite.tool_name, "https://bio.tools/#{prerequisite.tool_id}", target: "_blank" %>
                <% end  %>
            <% end %>
          </li>

      <% end %>
    </ul>
  <% if resource.prerequisites and !resource.prerequisites.empty? %>
    <p><strong>Recommended learning options:</strong></p>
    <ul>
      <% resource.recommended_courses.each do |resource, prerequisites| %>
        <% if (prerequisites.count > 1) %>
          <li><%= link_to resource.title, resource %> satisfies <%= prerequisites.count %> prerequisites </li>
          <ul>
            <% prerequisites.each do |prerequisite| %>
              <li>
                <%= prerequisite.verb %> <%= prerequisite.noun%><%#_text%>
                <% if prerequisite.tool_name and !prerequisite.tool_name.blank? %>
                  using <%= link_to prerequisite.tool_name, "https://bio.tools/#{prerequisite.tool_id}", target: "_blank" %>
                <% end  %>
              </li>
            <% end  %>
          </ul>
        <br>
        <% end %>
      <% end %>
    </ul>
  <% end %>

<% end %>