<div class="wrapper">
  <div id="sidebar" class="popout-sidebar">

    <h3 class="nav-heading" id="sidebar-header">
      Curation actions
    </h3>
    <% if @leaderboard %>
        <%= render :partial => 'leaderboard', :locals => {:leaderboard => @leaderboard} %>
    <% end %>
  </div>
  <div id="content">

    <%= link_to 'Back', curate_path, :class => "btn btn-info" %>
<%= @my_activities.inspect %>
    <h1>My Curation Activity</h1>

    <% if @my_activities and @my_activities.any? %>
        <div class="row">
          <% @my_activities.each do |activity| %>
              <% if activity.parameters.any? and activity.parameters.has_key?(:name)%>
                  <div class="row">
                  <% if activity.owner %>
                      <% if activity.owner == current_user %>
                            <div class="activity"
                                    data-resource_type="<%= activity.trackable_type.downcase.pluralize %>"
                                    data-resource_id="<%= activity.trackable_id %>"
                                    data-topic="<%= activity.parameters[:name] %>">
                                    <div class="col-lg-1"><i class="fa fa-pencil-square-o"></i></div>
                              <div class="col-lg-8">
                              <% action = activity_action(activity.key) %>
                              <%= link_to 'You', activity.owner %> <%= action %>ed the topic
                              <em><b><%= activity.parameters[:name] %></b></em>
                              <%= action == 'reject' ? 'from' : 'to' %> the
                              <%= activity_resource_type(activity.key) %>
                                <b><%= link_to activity.trackable.title, activity.trackable %></b>
                              <%= activity.parameters[:topic_uri] %>
                              <% days = ((Time.now - activity.created_at) / 1.day).to_i %>
                              <% if days == 0 %>
                                  <div class="days_ago_text">Added today</div>
                              <% else %>
                                  <div class="days_ago_text">Added <%= pluralize(days, "day") %> ago</div>
                              <% end %>
                                </div>
                                <div class="col-lg-3 curator_actions">
                                  <% if action == 'add' %>
                                      <div class="btn btn-danger remove_topic"><i class="fa fa-plus-square"></i> Remove this topic</div>
                                  <% else %>
                                      <div class="btn btn-success restore_suggestion"><i class="fa fa-plus-square"></i> Restore suggestion</div>
                                  <% end %>

                                </div>
                            </div>
                      <% end %>
                  <% end %>
                  </div>
              <% end %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>