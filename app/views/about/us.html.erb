      <%= render :partial => 'links', :locals => {'show': 'about'} %>
      <!-- CONTACT-->
      <div class="row">
        <div class="odd-about-block">
          <div id='contact' class="h3">Contact</div>
          <div class="sub-about-block">
            <%#= render :partial => "common/contact_form"%>
            For enquiries, information, or assistance; contact the TeSS support desk at <br> <a href="mailto:tess-support@googlegroups.com">tess-support@googlegroups.com</a>
          </div>
        </div>
      </div>

      <!-- THE TEAM-->
      <section id="team">
      <div class="row">
        <div class="even-about-block">
          <div id='team' class="h3">The Team</div>
